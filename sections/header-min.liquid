<header class="header-min">
  <div class="header-container">
    <div class="header-logo">
      {% if section.settings.logo != blank %}
        <a href="{{ routes.root_url }}">
          {{ section.settings.logo | image_tag: section.settings.logo.alt, loading: 'eager', width: section.settings.logo_width }}
        </a>
      {% else %}
        <a href="{{ routes.root_url }}" class="header-logo-text">
          {{ section.settings.logo_text | default: shop.name }}
        </a>
      {% endif %}
    </div>

    <nav class="header-nav">
      <ul class="nav-list">
        <li class="nav-item">
          <a href="/collections/all" class="nav-link">Store</a>
        </li>
        <li class="nav-item">
          <a href="/pages/support" class="nav-link">Support</a>
        </li>
        <li class="nav-item dropdown">
          <a href="/pages/company" class="nav-link">Company</a>
          <ul class="dropdown-menu">
            <li><a href="/pages/about" class="dropdown-link">About</a></li>
            <li><a href="/pages/team" class="dropdown-link">Team</a></li>
            <li><a href="/pages/press" class="dropdown-link">Press</a></li>
            <li><a href="/pages/contact" class="dropdown-link">Contact</a></li>
          </ul>
        </li>
        <li class="nav-item">
          <a href="/blogs/news" class="nav-link">News</a>
        </li>
      </ul>
    </nav>

    <div class="header-actions">
      <a href="/search" class="header-action" aria-label="Search">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M9 3.5a5.5 5.5 0 100 11 5.5 5.5 0 000-11zM2 9a7 7 0 1112.452 4.391l3.328 3.329a.75.75 0 11-1.06 1.06l-3.329-3.328A7 7 0 012 9z" clip-rule="evenodd" />
        </svg>
      </a>
      <a href="/account" class="header-action" aria-label="Account">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-5.5-2.5a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0zM10 12a5.99 5.99 0 00-4.793 2.39A6.483 6.483 0 0010 16.5a6.483 6.483 0 004.793-2.11A5.99 5.99 0 0010 12z" clip-rule="evenodd" />
        </svg>
      </a>
      <a href="/cart" class="header-action cart-link" aria-label="Cart">
        <svg width="20" height="20" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10 2a4 4 0 00-4 4v1H5a1 1 0 00-.994.89l-1 9A1 1 0 004 18h12a1 1 0 00.994-1.11l-1-9A1 1 0 0015 7h-1V6a4 4 0 00-4-4zM8 6V5a2 2 0 114 0v1H8zm0 2.5a.5.5 0 01.5-.5h3a.5.5 0 010 1h-3a.5.5 0 01-.5-.5z" clip-rule="evenodd" />
        </svg>
        <span class="cart-count">{{ cart.item_count }}</span>
      </a>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header Minimal",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo Text",
      "default": "ERGOGAIN"
    },
    {
      "type": "range",
      "id": "logo_width",
      "min": 50,
      "max": 200,
      "step": 10,
      "unit": "px",
      "label": "Logo Width",
      "default": "120"
    }
  ]
}
{% endschema %}